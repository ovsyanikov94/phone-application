<ul class="phones">
    {{#each phonesArray as |phone|}}
        <li class="thumbnail">
            <a href="#!/phones/{{phone.id}}" class="thumb">
                <img alt="{{{phone.name}}}" src="public/{{phone.imageUrl}}">
            </a>
            <a href="#!/phones/{{phone.id}}">{{phone.name}}</a>
            <p>{{phone.snippet}}</p>
        </li>
    {{/each}}
</ul>